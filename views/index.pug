doctype html
html(lang="en")
 head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="styles.css")
    title NodeJs
 body
    h1(class="title") #{title}

    div(class="container")
      if games.length === 0
         p No game available
      else
         each game in games
            div(class="game-card")
               h3 #{game.title}
               p #{game.genre}
 script(src="./index.js")